<div class="realtimeproducts">
  <h1>REAL TIME PRODUCTS</h1>
  <div class="products-container-rtp"></div>
</div>
<div class="events">
  <div class="add">
    <h2>Add Product</h2>
    <div class="formulario-add">
      <input id="add-title" type="text" placeholder="Title" />
      <input id="add-description" type="text" placeholder="Description" />
      <input id="add-price" type="number" placeholder="Price" />
      <input id="add-code" type="text" placeholder="Code" />
      <input id="add-stock" type="number" placeholder="Stock" />
      <input id="add-category" type="text" placeholder="Category" />
      <button id="button-add">Add New Product</button>
    </div>
  </div>
  <div class="update">
    <h2>Change Product</h2>
    <div class="formulario-update">
      <input id="update-id" type="text" placeholder="ID Product to change" />
      <input id="update-title" type="text" placeholder="Title" />
      <input id="update-description" type="text" placeholder="Description" />
      <input id="update-price" type="number" placeholder="Price" />
      <input id="update-code" type="text" placeholder="Code" />
      <input id="update-stock" type="number" placeholder="Stock" />
      <input id="update-category" type="text" placeholder="Category" />
      <button id="button-update">Change product</button>
    </div>
  </div>
  <div class="delete">
    <h2>Delete Product</h2>
    <div class="formulario-delete">
      <input id="delete-id" type="text" placeholder="Product ID" />
      <button id="button-delete">Delete Product</button>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/realtimeProducts.js"></script>